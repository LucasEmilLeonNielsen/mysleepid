                                        <a href="#" class="pr_list_ttl">{{ 'homepage.onboarding.product_title' | t }}</a>
                                        <div class="pr_list_meta mt5">{% render 'product-price' %}</div>
                                    </div>
                                </div>
                          {% endfor %}
                  {% endif %}                      
