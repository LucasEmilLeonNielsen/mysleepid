{%- capture siteHeader -%}
{%- assign secSt = section.settings -%}
{%- liquid
    assign logo = settings.logo
    assign istrnsparent = false
    if secSt.trhead
        assign logo = secSt.logo | default: logo
    endif
    assign pageType = request.page_type
    if pageType == 'index' and secSt.trhead 
        assign istrnsparent = true
    elsif pageType == 'collection' and secSt.trheadcl
        assign istrnsparent = true
    elsif pageType == 'blog' and secSt.trheadbg
        assign istrnsparent = true
    elsif pageType == 'article' and secSt.trheadar and article.image != blank
        assign istrnsparent = true
    else
        assign istrnsparent = false 
    endif
-%}
<style>
{% if istrnsparent %}
    .hdr_wrap:not(.sticky_hdr) { height:0; overflow:visible; }
    .hdr_wrap:not(.sticky_hdr) .hdicon,
    .hdr_wrap:not(.sticky_hdr) .promo_txt > *,
    .hdr_wrap:not(.sticky_hdr) .lvl1 > a { color:{{ secSt.thcl }}!important; }
    .hdr_wrap:not(.sticky_hdr) .stlogo,
    .hdr_wrap.sticky_hdr .trlogo { display:none !important; }
    .hdr_wrap:not(.sticky_hdr) #main_navwr { background-color:transparent; border:0 none; }
    .hdr_wrap.sticky_hdr { position:fixed; }
    #PageContainer { --hdht:{{ settings.headerht }}px; --hdhtm:{{ settings.headerhtm }}px; }
{% endif %} 
#main_nav.f-jcs > li:first-child {margin-left:-20px;}
</style>
{%- capture logo -%}
<{% if template == 'index'%}h1 {% else %}div {% endif %}class="header-logo"> <a href="{{ routes.root_url }}" itemprop="url" class="hdr_logo_lnk"> {%- capture logoWidth -%}{{ settings.logo_width }}x{%- endcapture -%}
    {%- assign istrLogo = false -%}
    {%- if istrnsparent and logo != blank -%}
        <img loading="lazy" src="{{ logo | img_url: logoWidth }}" width="{{ settings.logo_width }}" height="{{ settings.logo_width | divided_by: logo.aspect_ratio | floor }}" alt="{{ logo.alt | default: shop.name }}" srcset="{{ logo | img_url: logoWidth }} 1x, {{ logo | img_url: logoWidth, scale: 2 }} 2x" class="trlogo">
    {%- endif -%}
    {%- if settings.logo != blank -%}
        <img loading="lazy" src="{{ logo | img_url: logoWidth }}" width="{{ settings.logo_width }}" height="{{ settings.logo_width | divided_by: settings.logo.aspect_ratio | floor }}" alt="{{ settings.logo.alt | default: shop.name }}" srcset="{{ settings.logo | img_url: logoWidth, scale: 2 }} 1x, {{ settings.logo | img_url: logoWidth, scale: 4 }} 1.1x" class="stlogo">
    {%- else -%}
        {{ shop.name }}
    {%- endif -%} <span class="hidden_txt">{{ shop.name }}</span> </a> </{% if template == 'index'%}h1{% else %}div{% endif %}>
{%- endcapture -%}

{%- capture promo -%}
    {%- if secSt.promo_head != blank or secSt.promo_text != blank -%}
<div class="fl f-aic promo_txt hide-sm hide-md" style="--icon_cl:{{ secSt.icon_cl }};">
   {% if secSt.prico != blank and secSt.icon == 'custom' %}<img loading="lazy" class="at-icon mr5" src="{{ secSt.prico | image_url: width: '60' }}" width="18" height="18" alt="" />{% else %}{% render 'icons', icon: secSt.icon %} {% endif %}
  <div style="color:{{ section.settings.ptxtcl }}"> {%- if section.settings.promo_head != blank -%}
    <p class="mb0">{{ section.settings.promo_head }}</p>
    {%- endif -%}
    {%- if section.settings.promo_text != blank -%}<span>{{ section.settings.promo_text }}</span>{%- endif -%} </div>
</div>
{%- endif -%}
{%- endcapture -%}

{%- capture buttons -%}
<div class="fl f-jce f-aic icons-col{% if secSt.cntlogo %} lgcnt{% endif %}"> {% if secSt.stype == "2" and secSt.cntlogo == false %} <a class="hdicon searchIcn hide-lg" href="{{ routes.search_url }}" title="{{ 'sections.header.search' | t }}"> {% render 'icon-search', icntyp: secSt.icntyp %}
  <p class="m0 hide">{{ 'sections.header.search' | t }}</p>
  </a> {% endif %}
  
  {% if shop.customer_accounts_enabled %} <a class="hdicon user-menu" href="{%- if customer -%}{{ routes.account_url }}{%- else -%}{{ routes.account_login_url }}{%- endif -%}" title="{{ 'sections.header.account' | t }}"> {% render 'icon-account', icntyp: secSt.icntyp %}
